<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.apache.xml.security" level="TRACE"/>
    <logger name="org.jcp.xml.dsig" level="TRACE"/>
    <logger name="java.security" level="TRACE"/>
    <logger name="com.sun.org.apache.xml.internal.security" level="TRACE"/>

</configuration>
